<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp">

    <EditText
        android:id="@+id/etDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0"
        android:inputType="none"
        android:gravity="end"
        android:textSize="28sp"
        android:focusable="false"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="4"
        android:layout_marginTop="20dp">

        <Button android:id="@+id/btn1" android:text="1" style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button android:id="@+id/btn2" android:text="2" style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button android:id="@+id/btn3" android:text="3" style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button android:id="@+id/btnAdd" android:text="+" style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button android:id="@+id/btn4" android:text="4" style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button android:id="@+id/btn5" android:text="5" style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button android:id="@+id/btn6" android:text="6" style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button android:id="@+id/btnSub" android:text="-" style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button android:id="@+id/btn7" android:text="7" style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button android:id="@+id/btn8" android:text="8" style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button android:id="@+id/btn9" android:text="9" style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button android:id="@+id/btnMul" android:text="ร" style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button android:id="@+id/btn0" android:text="0" style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button android:id="@+id/btnClear" android:text="C" style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button android:id="@+id/btnEquals" android:text="=" style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button android:id="@+id/btnDiv" android:text="รท" style="@style/Widget.AppCompat.Button.Borderless"/>
    </GridLayout>

</LinearLayout>
